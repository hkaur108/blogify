<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/header.ejs') %>
    <title>Document</title>
    <style>
        body{
            background-color: #261C2C;
            display: flex;
            align-items: center;
            justify-content: center;
            max-height:100vh;
            flex-direction: column;
        }
        label{
            font-size: 1.05rem;
            font-weight: bold;
            letter-spacing: 1px;
            margin: .5rem 0;
        }
        .main{
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0px 0px 3px 3px #644669;
            background-color: #3E2C41;
        
        }
        input{
            background-color: #515585!important;
             color:#BBE1FA!important;
        }
        h4,button,input,h1,label{
            letter-spacing: 1px;
            color:#BBE1FA;
        }
        .image-container{
            display: block;
            position: fixed;
            background: url('../public/images/blog.png');
        }
        
    </style>
</head>
<body>
    <%-include('./partials/nav.ejs') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-lg-12 col-md-8 col-sm">
                <h1 class="text-center fw-bold">Welcome to Blogify</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm">
                <% if (locals.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" id="alert" role="alert"><%= locals.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
                <div class="container my-4  mx-auto w-50 p-5 main">
                    <div class="row">
                        <div class="col" >
                            <h4 class="text-center fw-bold">Login to blogify</h4>
                            <form action="/user/signin" method="post">
                                <div class="form-group">
                                  <label for="email">Email address</label>
                                  <input name="email" type="email" class="form-control" id="email" aria-describedby="email" placeholder="Enter email" required>
                                </div>
                                <div class="form-group">
                                  <label for="password">Password</label>
                                  <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
                                </div>
                                <div class="d-grid">
                                  <button type="submit" class="btn btn-sm btn-info mt-3">Submit</button>
                                </div>
                              </form>
                        </div>
                    </div>
             
    </div>
     
    
    
    <%-include('./partials/footer.ejs') %>
</body>
</html>